<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b> <br>
                    <%
                        let today = new Date();
                        let checkInOffset = Math.floor(Math.random() * 28 + 1);
                        let stayDuration = Math.floor(Math.random() * 4 + 2);
                        let checkInDate = new Date(today.setDate(today.getDate() + checkInOffset));
                        let checkOutDate = new Date(today.setDate(today.getDate() + stayDuration));
                    %>
                    <span style="display: block;">
                        <span class="tax-info">&nbsp;<%= stayDuration %> nights â€¢</span> 
                        &nbsp;<%= checkInDate.getDate() %>-<%= checkOutDate.getDate() %> &nbsp;&nbsp;
                        <%= checkInDate.toLocaleString('default', { month: 'short' }) %>
                    </span>
                    
                    <span class="price-info"><span class=" fw-bold">&nbsp;&#8377;<%= listing.price.toLocaleString("en-IN") %> </span>  night</span>
                    <i class="tax-info tax-underline ms-1"><i class="rs-sign"><b> &#8377;</i><%= (listing.price * 1.18).toLocaleString("en-IN") %></b> &nbsp;total after taxes</i>
                </p>
            </div>
        </div>
    </a>
    <% } %> 

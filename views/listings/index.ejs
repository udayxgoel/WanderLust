<% layout('/layouts/boilerplate') -%>  
    <div id="filters">
        <div class="filter" data-category="trending">
            <a href="/listings?category=trending">
                <i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </a>
        </div>
        <div class="filter" data-category="rooms">
            <a href="/listings?category=rooms">
                <i class="fa-solid fa-bed"></i>
                <p>Rooms</p>
            </a>
        </div>
        <div class="filter" data-category="iconic-cities">
            <a href="/listings?category=iconic-cities">
                <i class="fa-solid fa-mountain-city"></i>
                <p>Iconic Cities</p>
            </a>
        </div>
        <div class="filter" data-category="mountains">
            <a href="/listings?category=mountains">
                <i class="fa-solid fa-mountain"></i>
                <p>Mountains</p>
            </a>
        </div>
        <div class="filter" data-category="castles">
            <a href="/listings?category=castles">
                <i class="fa-brands fa-fort-awesome"></i>
                <p>Castles</p>
            </a>
        </div>
        <div class="filter" data-category="amazing-pools">
            <a href="/listings?category=amazing-pools">
                <i class="fa-solid fa-person-swimming"></i>
                <p>Amazing Pools</p>
            </a>
        </div>
        <div class="filter" data-category="camping">
            <a href="/listings?category=camping">
                <i class="fa-solid fa-campground"></i>
                <p>Camping</p>
            </a>
        </div>
        <div class="filter" data-category="farms">
            <a href="/listings?category=farms">
                <i class="fa-solid fa-cow"></i>
                <p>Farms</p>
            </a>
        </div>
        <div class="filter" data-category="arctic">
            <a href="/listings?category=arctic">
                <i class="fa-solid fa-snowflake"></i>
                <p>Arctic</p>
            </a>
        </div>
        <div class="filter" data-category="domes">
            <a href="/listings?category=domes">
                <i class="fa-solid fa-landmark-dome"></i>
                <p>Domes</p>
            </a>
        </div>
        <div class="filter" data-category="boats">
            <a href="/listings?category=boats">
                <i class="fa-solid fa-sailboat"></i>
                <p>Boats</p>
            </a>
        </div>        
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListings){ 
            let totalPrice = (listing.price * 1.18).toFixed(2); // Compute total price including GST
        %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card col listing-card" data-price="<%= listing.price %>" data-total-price="<%= totalPrice %>">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b> <br>
                <span class="base-price"><%= listing.price.toLocaleString("en-IN") %> / night</span>
                <span class="total-price" style="display:none;"></span> <!-- Hide total price by default -->
              </p>
            </div>
          </div>
        </a>
        <% } %> 
    </div>
<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
    let listingCards = document.getElementsByClassName("listing-card");

    for (let card of listingCards) {
      let basePriceElement = card.querySelector(".base-price");
      let totalPriceElement = card.querySelector(".total-price");
      let totalPrice = card.getAttribute("data-total-price");

      if (taxSwitch.checked) { // Check if switch is ON
        basePriceElement.style.display = "none";
        totalPriceElement.style.display = "inline";
        totalPriceElement.textContent = `${totalPrice} / night (including 18% GST)`;
      } else {
        basePriceElement.style.display = "inline";
        totalPriceElement.style.display = "none";
      }
    }
  });
</script>       